{
  "name": "coordinator-client",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start-verifier": "MODE=verify PARTICIPANT_ID=verifier0 node dist/index.js",
    "start-dave": "MODE=contribute PARTICIPANT_ID=dave node dist/index.js",
    "start-becky": "MODE=contribute PARTICIPANT_ID=becky node dist/index.js",
    "coverage": "nyc mocha -r ts-node/register src/**/*.test.ts",
    "test": "npm run coverage && prettier --check \"./src/**/*.ts\" && eslint 'src/**/*.ts'",
    "format": "prettier --loglevel error --write \"./src/**/*.ts\"",
    "lint": "eslint 'src/**/*.ts' --fix"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.2",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^8.1.1",
    "nock": "^13.0.4",
    "nodemon": "^2.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.2.0-preview.1",
    "axios": "^0.19.2",
    "execa": "^4.0.3",
    "shuffle-array": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "semi": "off",
      "@typescript-eslint/semi": [
        "error",
        "never"
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": true
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 4,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
